<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/cat_bar_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:id="@+id/all_categories"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:gravity="bottom"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text="All"
            android:textColor="@color/textPrimary"
            android:textSize="20sp"
            />
        <ImageView
            android:id="@+id/add_category"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_plus_rounded_square"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/categories_tabs_rview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/all_categories"
            android:layout_toStartOf="@id/add_category"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            android:fadeScrollbars="false"
            android:scrollbarThumbHorizontal="@color/colorAccent"
            android:scrollbarSize="1dp"
            android:scrollbarStyle="insideInset"
            >
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <TextView
        android:id="@+id/inbox_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/cat_bar_layout"
        android:textSize="20sp"
        android:text="Inbox"
        android:textColor="@color/textPrimary"/>
    <ImageView
        android:id="@+id/view_type_arrow"
        android:layout_width="20dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="3dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/cat_bar_layout"
        android:gravity="bottom"
        android:src="@drawable/ic_arrow_down"
        />
    <ImageView
        android:id="@+id/view_type"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_toStartOf="@id/view_type_arrow"
        android:layout_below="@id/cat_bar_layout"
        android:src="@drawable/ic_grid_view"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/inbox_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inbox_text"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:scrollbarThumbHorizontal="@color/colorAccent"
        android:scrollbarSize="1dp"
        android:scrollbarStyle="insideInset"
        >
    </android.support.v7.widget.RecyclerView>

    <ImageView
        android:id="@+id/divider_bar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/inbox_text"
        android:src="@drawable/ic_thin_rect"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/divider_arrow"
        android:src="@drawable/ic_arrow_up"
        app:fabSize="mini"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="-5dp"
        android:layout_marginTop="-15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/divider_bar"
        />

    <fragment
        android:id="@+id/notes_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider_bar"
        android:layout_alignParentBottom="true"
        android:name="neal.mitch.nsmaster.utils.fragments.BlankFrag"
        tools:layout="@layout/frag_blank" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:src="@drawable/ic_add_note"
        app:fabSize="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>